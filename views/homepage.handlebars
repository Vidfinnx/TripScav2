  {{!-- Sign up Modal --}}
  <div class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
      <form id="signup-form">
        <div class="field">

          <div class="control">
            <input id="email-signup" class="input" type="text" placeholder="Email" autofocus="true">
          </div>
        </div>
        <div class="field">

          <div class="control">
            <input id="username-signup" class="input" type="text" placeholder="Username" autofocus="true">
          </div>
        </div>
        <div class="field">

          <div class="control">
            <input id="password-signup" class="input" type="password" placeholder="Password" autofocus="true">
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <button id="modal-close" class="modal-close is-large" aria-label="close"></button>
  </div>

  {{!-- Login Modal --}}
  <div class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
      <form id="login-form">
        <div class="field">

          <div class="control">
            <input id="username-login" class="input" type="text" placeholder="Username" autofocus="true">
          </div>
        </div>
        <div class="field">

          <div class="control">
            <input id="password-login" class="input" type="password" placeholder="Password" autofocus="true">
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <button id="modal-close" class="modal-close is-large" aria-label="close"></button>
  </div>


  {{!-- Modals Login and Signup Scripts --}}
  <script src="/js/login.js"></script>
  <script src="/js/signup.js"></script>
  <!-- Cursor and Navigation Bar Javascript -->
  <script src="/js/menu.js"></script>
  <!-- Render script for logged in users only -->
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}



</body>

</html>